{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["./shared/*"]
    }
  },
  "include": [
    "server/refactored_*.ts",
    "server/apply_refactored_schema.sql", 
    "db/**/*", 
    "shared/**/*"
  ],
  "exclude": [
    "node_modules", 
    "build", 
    "dist", 
    "**/*.test.ts",
    "server/index.ts",
    "server/routes.ts", 
    "server/storage.ts",
    "server/services/**/*",
    "server/env.ts",
    "server/db.ts"
  ]
} 